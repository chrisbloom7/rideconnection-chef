  },
  
  "postgresql": {
    "pg_hba": [
      {
        "comment": "Allow MD5 logins from the local connections",
        "type":    "local", 
        "db":      "all", 
        "user":    "all", 
        "addr":    "", 
        "method":  "md5"
      },
      {
        "comment": "Allow MD5 logins from local IPv4 connections",
        "type":    "host", 
        "db":      "all", 
        "user":    "all", 
        "addr":    "127.0.0.1/32", 
        "method":  "md5"
      },
      {
        "comment": "Allow MD5 logins from local IPv6 connections",
        "type":    "host", 
        "db":      "all", 
        "user":    "all", 
        "addr":    "::1/128", 
        "method":  "md5"
      }
      {
        "comment": "Allow MD5 logins from app server IPv4 connections",
        "type":    "host", 
        "db":      "all", 
        "user":    "all", 
        "addr":    "x.x.x.x/32",
        "method":  "md5"
      }
    ],
    "config": { "listen_addresses": "localhost,x.x.x.x" },
    "config_pgtune": { "db_type": "web" },
    "contrib": {
      "extensions": ["fuzzystrmatch"]
    },
    "password": { "postgres": "d41d8cd98f00b204e9800998ecf8427e" }
  },
  "postgis": { "template_name": "template_postgis" },

  "packages": [
    "fail2ban",
    "mutt",
    "sysstat",
    "nethogs",
    "htop",
    "screen",
    "apt-file",
    "command-not-found",
  ],

  "run_list": [
    "role[base_server]",
    "role[db_server]",
  ]
}
